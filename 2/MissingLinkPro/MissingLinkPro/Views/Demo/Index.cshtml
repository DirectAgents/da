
@{
    ViewBag.Title = "Search Demo";
}

@{ Html.RenderAction("SearchPageScripts", "Application"); }

<div style="margin-top:55px;">
    <h2 class="topic">Demonstration</h2>
    <p class="small">Enter your company or brand name under “Search Query” and your website under “Target Site to Scan for,” then click “Perform Search” to find your linkless mentions!</p>
    <p class="small">As this is a demo, certain features will not be available. Please sign up for an account to unlock them.</p>
</div>

<div style="margin:20px;">
    <p><a href="http://www.directagents.com/directlink/assist.php" onclick="javascript:void window.open('http://www.directagents.com/directlink/assist.php','1420493156079','width=725,height=800,toolbar=0,menubar=0,location=0,status=1,scrollbars=1,resizable=1,left=0,top=0');return false;"><img src="~/Images/btn_assist.gif" /></a></p>
</div>

@using (Html.BeginForm("Index", "Demo", FormMethod.Post, new { id = "form", onsubmit = "go()" }))
{
    @Html.ValidationSummary()
    <table class="application" id="app-body">
        <tr class="app-row">
            <td class="app-column">Search Query
                <span style="cursor:Pointer;" title="Type in whatever it is you are looking for when using a search engine.">
                    <a href = "javascript:void(0)" onclick = "document.getElementById('light').style.display='block';document.getElementById('fade').style.display='block'"><img src="~/Images/question_blob.png" /></a>
                </span>
            </td>
            <td class="app-column">Target Site to Scan for <span style="cursor:Pointer;" title="Type in the website that you are scanning your results for linkbacks to. Please include subdomain prefix if one exists."><img src="~/Images/question_blob.png" /></span></td>
        </tr>
        <tr class="app-row">
            <td class="app-column"><input class="form-field" type="text" size="45" name="BingSearchQuery" placeholder="e.g. &quot;16 Handles&quot;" required></td>
            <td class="app-column"><input class="form-field" type="text" size="45" name="ClientWebsite" placeholder="e.g. 16handles.com" required></td>
        </tr>

        <tr class="app-row">
            <td class="app-column">Exclude Terms <span style="cursor:Pointer;" title="Type in whatever terms you wish for the search engine to exclude from your search."><img src="~/Images/question_blob.png" /></span></td>
        </tr>
        <tr class="app-row">
            <td class="app-column"><input class="form-field" type="text" size="45" name="ExcludeString"></td>
        </tr>

        <tr>
            <td style="line-height:20px; padding-top:10px;">Start At Search Rank#<br><p style="font-size:small; padding-bottom:12px;"><b>(Max: Rank 1001)</b></p></td>
            <td class="app-column">Type of Results</td>
        </tr>
        <tr>
            <td class="app-column"><input type="number" value="@Model.skip" min="1" max="1001" name="skip"></td>
            <td class="app-column">
                <input class="radio-btn" type="radio" name="ResultType" value = "news"checked="checked"> News
                &nbsp;&nbsp;&nbsp;&nbsp;
                <input class="radio-btn" type="radio" name="ResultType" value = "web"> Web
            </td>
        </tr>

        <tr class="app-row">
            <td class="app-column"><br />Please provide your email address</td>
        </tr>
        <tr class="app-row">
            <td class="app-column"><input class="form-field" type="text" size="45" name="Email" required></td>
        </tr>
    </table>
    
    <div class="big-orange-btn-location">
    <table style="margin-left:auto; margin-right:auto;">
        <tr>
    <td><input type="hidden" name="NewSession" value="true">
        <input type="hidden" name="top" value=15>
                <input style="margin-bottom:30px;" class="big-orange-btn" type="image" name="SubmitBtn" src="~/Images/btn_search.gif" value ="Perform Search"></td>
    </tr>
        <tr>
            <td><div class="eta-indicator">
<p id="eta">Estimated Time to Completion: 25.97 sec.</p>
    </div></td>
        </tr>
    </table>
        </div>
    @Html.Hidden("DisplayAllResults", "true");
    @Html.Hidden("ExcludeLinkbackResults", "false");
}
