@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Monthly Maximum Reached";
}

@Styles.Render("~Content/css")


<h2>Package Limit: @Html.DisplayFor(m => m.Package.Name)</h2>
<br>

<div style="padding:20px;">
<p>
You have reached your allowed maximum of @Html.DisplayFor(m => m.Package.SearchesPerMonth) searches per month.<br>
This limit for your account will reset on @Model.Anniversary.AddMonths(1).ToShortDateString().<br>
If the number of searches provided is insufficient for your needs, please consider a higher package plan.<br>
For inquiries and technical support, please contact the administrator at admin@directagents.com.<br>

</p>
</div>