@model IEnumerable<IdentitySample.Models.Package>

@{
    ViewBag.Title = "Packages: Index";
}

<section>
<h2 class="topic">Index</h2>

<p>Note to Admins: The ability to edit the cost/month of an existing package has been disabled, as Stripe does not allow the editing of a subscription once one has been created.
</p>
<br />
<div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" style="margin-left:auto; margin-right:auto; text-align:center;">
        <tr>
                    <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SearchesPerMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxResults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPerMonth)
            </th>
            <th>User Options</th>
        </tr>

    @foreach (var item in Model) {
        <tr>
                    <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SearchesPerMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxResults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPerMonth)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

    </table>

    </div>
    </section>
