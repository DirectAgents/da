
@{
    ViewBag.Title = "Logout";
}

<div style="text-align:center;"><h2 class="topic">Logging off...</h2></div>

@if (Request.IsAuthenticated)
{
  using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"  })) {
        @Html.AntiForgeryToken()
    }
}

else {
    <script>$(location).attr('href', 'http://www.directagents.com/directlink');</script>
}


@section Scripts {
    
    <script>
    $(document).ready(function() {
        $("#logoutForm").submit();
    })
    </script>
}