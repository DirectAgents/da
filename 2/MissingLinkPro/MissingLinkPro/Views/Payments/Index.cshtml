@model IEnumerable<IdentitySample.Models.Package>

@{
    ViewBag.Title = "Payments & Subscriptions";
}

<h2>Package Plans</h2>
<br />
<p>The following package plans are currently available for subscription.<br />
    You may choose to upgrade or downgrade your plan at a later time if desired.<br />
    NOTE: Use 4242424242424242 with any CVC and expiry date.<br />
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SearchesPerMonth)
        </th>
        <th>
            Results/Search
            @*@Html.DisplayNameFor(model => model.MaxResults)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostPerMonth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name,"Pay", new { id=item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SearchesPerMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxResults)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.CostPerMonth)
        </td>
    </tr>
}

</table>
