@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Cancellation";
}

@if (Model.PackageId == 1) {
    
    <table class="content-space">
    <tr>
        <td><h2>You Are A Freemium User</h2></td>
    </tr>
    <tr>
        <td><br /></td>
    </tr>
    <tr>
        <td><p>An error occurred while processing your request.</p>
            <p>You are currently registered as a Freemium user, which has no monthly cost, and therefore cannot be cancelled.</p><br />
</td>
    </tr>
    </table>
    <br /><br />
}

else if (!Model.IsActive)
{
    <table class="content-space">
    <tr>
        <td><h2>Subscription Already Cancelled</h2></td>
    </tr>
    <tr>
        <td><br /></td>
    </tr>
    <tr>
        <td><p>An error occurred while processing your request.</p>
            <p>Your subscription had already been cancelled at a previous time. Once your subscription reaches the end of its pay period, your account will be assigned the Freemium package.
    </p><br />
</td>
    </tr>
    </table>
    <br /><br />
    
}
else {
<div id="main">
<header>
    <div class="container">
        <div class="row clearfix">
            <div class="column full" style="padding-bottom:30px;">
                    <h2 class="topic">Cancel Subscription Confirmation</h2>
                    <div style="text-align:center;"><p class="text-success">@ViewBag.StatusMessage</p></div>
                    <p>You are about to cancel your subscription. Doing so will also remove your credit card information.</p>
                <p>Do you wish to proceed?</p>
        </div>
    </div>

        @using (Html.BeginForm("CancelSubscription", "Manage", FormMethod.Post, new { id = "form" }))
            {
            <table class="credit-card-form">
                <tr>
                    <td style="padding-right:20px;"><h4><input class="radio-btn" type="radio" name="CancelSubscription" value="true" /> Yes</h4></td>
                    <td><h4><input class="radio-btn" type="radio" name="CancelSubscription" value="false" checked="checked" /> No</h4></td>
                </tr>
            </table>
            <div style="text-align:center; padding-top:20px;"><button type="submit" value="Cancel">Cancel Subscription</button></div>
            }
                </div>
            </header>
        </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
}
