@model IdentitySample.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Your Account";
}

<section class="announcement">
<h2 class="topic">Your User Information</h2>
<div style="text-align:center;"><p class="text-success">@ViewBag.StatusMessage</p></div>
<div>
    <div><br>
            <table style="margin-left:auto; margin-right: auto; margin-bottom:40px; width:450px;">
                <tr>
                    <td><p class="small">Registered Name</p></td>
                    <td><p class="small">@Model.FirstName @Model.LastName</p></td>
                </tr>
                <tr>
                    <td><p class="small">Email</p></td>
                    <td><p class="small">@Model.Email</p></td>
                </tr>
                <tr>
                    <td><p class="small">Phone Number</p></td>
                    <td><p class="small">@Model.PhoneNumber</p></td>
                </tr>
                <tr>
                    <td><p class="small">Credit Card</p></td>
                    <td><p class="small">@Model.CardSummary</p></td>
                </tr>
                <tr>
                    <td><p class="small">Subscription</p></td>
                    <td><p class="small">@Model.Package.Name @if (!Model.IsActive) { <b>[Cancelled]</b> } </p></td>
                </tr>
                <tr>
                    <td><p class="small">Searches/Month</p></td>
                    <td><p class="small">@Model.Package.SearchesPerMonth</p></td>
                </tr>
                 <tr>
                    <td><p class="small">Results/Search</p></td>
                    <td><p class="small">@Model.Package.MaxResults</p></td>
                </tr>
                <tr>
                <td class="profile-left-col"><p class="small">Searches Performed This Month</p></td>
                <td><p class="small">@Model.QueriesPerformed</p></td>
                </tr>
                <tr>
                <td><p class="small">Cycle Start Date</p></td>
                <td><p class="small">@Model.Anniversary</p></td>
                </tr>
                <tr>
                <td><p class="small">Cycle End Date</p></td>
                <td><p class="small">@Model.Anniversary.AddMonths(1)</p></td>
                </tr>
                <tr>
                <td><p class="small">Time of Last Run</p></td>
                <td><p class="small">@Model.DateTimeStamp</p></td>
                </tr>
                </table>
