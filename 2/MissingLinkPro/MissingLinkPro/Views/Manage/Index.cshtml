<section class="features">
    <div class="container">

    <div class="row clearfix">
        <div class="column half">
            <div class="box">
                <h3>@Html.ActionLink("Update User Information", "UpdateUser", "Manage")</h3>
                <p class="small">Click on the provided link to update your name, phone number, and password.
                    <br /><br />
                </p>
            </div>
        </div>
                <div class="column half">
            <div class="box">
                <h3>@Html.ActionLink("Subscriptions Management", "Subscriptions", "Manage")</h3>
                <p class="small">Click on the provided link to manage your current subscription.
