@model IdentitySample.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Your Account";
}

<h2>Your User Information</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-8">
        <p><br>
            <table style="margin-bottom:40px; width:555px;">
                <tr>
                    <td><h8>Package Subscription</h8></td>
                    <td>@Model.Package.Name @if (!Model.IsActive) { <b>[Cancelled]</b> }</td>
                </tr>
                <tr>
                    <td><h8>Package Details</h8></td>
                    <td>@Model.Package.SearchesPerMonth Searches/Month, @Model.Package.MaxResults Results/Search</td>
                </tr>
                <tr>
                <td><h8 style="margin-right:50px;">Searches Performed This Month</h8></td>
                <td>@Model.QueriesPerformed</td>
                </tr>
                <tr>
                <td><h8>Activation Date</h8></td>
                <td>@Model.Anniversary</td>
                </tr>
                <tr>
                <td><h8>Next Reset Date</h8></td>
                <td>@Model.Anniversary.AddMonths(1)</td>
                </tr>
                <tr>
                <td><h8>Time of Last Run</h8></td>
                <td>@Model.DateTimeStamp</td>
                </tr>
                </table>
        </p>
        <p>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Pick a password", "SetPassword")
            }
        </p>
        <p>
            Registered Name: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
            [@Html.ActionLink("Change Name", "ChangeName")]
        </p>
        <p>
            Phone Number: @(Model.PhoneNumber ?? "None") [
            @if (Model.PhoneNumber != null)
            {
                @Html.ActionLink("Change", "AddPhoneNumber")
                @: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemovePhoneNumber")
            }
            else
            {
                @Html.ActionLink("Add", "AddPhoneNumber")
            }
            ]
        </p>
