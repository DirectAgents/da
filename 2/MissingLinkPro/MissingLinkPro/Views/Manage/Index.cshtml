@model IdentitySample.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Your Account";
}

<h2>Your User Information</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-8">
        <p><br>
            <table style="margin-bottom:40px; width:450px;">
                <tr>
                    <td><h8>Registered Name</h8></td>
                    <td>@Model.FirstName @Model.LastName</td>
                </tr>
                <tr>
                    <td><h8>Email</h8></td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td><h8>Phone Number</h8></td>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <td><h8>Credit Card</h8></td>
                    <td>@Model.CardSummary</td>
                </tr>
                <tr>
                    <td><h8>Package Subscription</h8></td>
                    <td>@Model.Package.Name @if (!Model.IsActive) { <b>[Cancelled]</b> }</td>
                </tr>
                <tr>
                    <td><h8>Searches/Month</h8></td>
                    <td>@Model.Package.SearchesPerMonth</td>
                </tr>
                                <tr>
                    <td><h8>Results Per Search</h8></td>
                    <td>@Model.Package.MaxResults</td>
                </tr>
                <tr>
                <td><h8 style="margin-right:50px;">Searches Performed This Month</h8></td>
                <td>@Model.QueriesPerformed</td>
                </tr>
                <tr>
                <td><h8>Cycle Start Date</h8></td>
                <td>@Model.Anniversary</td>
                </tr>
                <tr>
                <td><h8>Cycle End Date</h8></td>
                <td>@Model.Anniversary.AddMonths(1)</td>
                </tr>
                <tr>
                <td><h8>Time of Last Run</h8></td>
                <td>@Model.DateTimeStamp</td>
                </tr>
                </table>
        </p>
